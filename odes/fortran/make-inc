# FORTRAN Compiler
FC = gfortran-10

# options
FCOPT = -cpp -ffree-form -g -fbacktrace -Wall -O0

# libraries
LIBS =


# sources
NL_SOLVER_FZERO_SRC = fzero.for
NUM_INTEGRATORS_SRC = odes.for
TEST_NUMINT_SRC     = test.for
TEST_IMPULSE_SRC    = impulse.for


# objects
